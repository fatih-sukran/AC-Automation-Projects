#!groovy

pipeline {
    agent any

    options {
        timeout(time: 1, unit: 'HOURS') // En fazla 1 saat s√ºrer
    }

    tools {
        maven "mvn"
    }

    parameters {
        string name: "SUITE_ID", defaultValue: "1", description: "Lighthouse Suite ID"
    }

    environment {
        suite.id = params.SUITE_ID
    }

    stages {
        stage("Run Automation Tests") {
            steps {
                script {
                    sh script: "mvn -pl clean test", returnStatus: true
                }
            }
        }
    }

}
